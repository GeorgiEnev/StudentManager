@model IEnumerable<StudentManager.Models.Subject>

@{
    ViewData["Title"] = "Subjects";
}

<link rel="stylesheet" href="~/css/subject-index.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="subject-page">
    <!-- Floating particles -->
    <div class="particle" style="width: 10px; height: 10px; top: 20%; left: 10%; animation-delay: 0s;"></div>
    <div class="particle" style="width: 15px; height: 15px; top: 60%; left: 80%; animation-delay: 1s;"></div>
    <div class="particle" style="width: 8px; height: 8px; top: 30%; left: 50%; animation-delay: 2s;"></div>
    <div class="particle" style="width: 12px; height: 12px; top: 80%; left: 30%; animation-delay: 3s;"></div>

    <div class="text-center">
        <h2 class="subj-title">
            <i class="bi bi-journal-bookmark-fill"></i> Subjects
        </h2>
        <div class="btn-container">
            <a asp-action="Create" class="btn-subj">
                <i class="bi bi-plus-circle-fill"></i> Add Subject
            </a>
        </div>
    </div>

    <div class="grid-container">
        @foreach (var s in Model)
        {
            var initials = !string.IsNullOrEmpty(s.Name)
            ? s.Name.Substring(0, 1).ToUpper()
            : "?";
            <div class="subj-card">
                <div class="subj-avatar">@initials</div>
                <div class="subj-content">
                    <h5 class="subj-name">@s.Name</h5>
                    <p class="subj-teacher">Instructor: <strong>@s.Teacher?.FullName</strong></p>
                </div>
                <div class="subj-actions">
                    <a asp-action="Edit" asp-route-id="@s.Id" class="link-edit">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="link-del">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </div>
            </div>
        }
    </div>
</div>