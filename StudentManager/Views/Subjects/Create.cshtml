@model StudentManager.Models.Subject
@{
    ViewData["Title"] = "Add Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/subject-create.css" />

<div class="create-subject-page">
    <div class="create-card">
        <div class="card-header">
            <h2><i class="bi bi-journal-plus"></i> Add New Subject</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name">Subject Name</label>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="TeacherName">Teacher Full Name</label>
                    <input name="TeacherName" id="TeacherName" />
                    <span class="text-danger">
                        @ViewData.ModelState["TeacherName"]?.Errors.FirstOrDefault()?.ErrorMessage
                    </span>
                </div>

                <div class="actions">
                    <a asp-action="Index" class="btn btn-cancel">
                        <i class="bi bi-x-lg"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-add">
                        <i class="bi bi-check-lg"></i> Create Subject
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}